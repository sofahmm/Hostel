<Page x:Class="Hostel.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hostel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1"
                   Grid.ColumnSpan="4"
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="АВТОРИЗАЦИЯ"
                   FontSize="34"/>
        <TextBlock Grid.Column="1"
                   Grid.ColumnSpan="4"
                   Grid.Row="1"
                   Grid.RowSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="логин"
                   FontSize="32"/>
        <TextBox x:Name="loginTb"
                 Grid.Column="1"
                 Grid.ColumnSpan="4"
                 Grid.Row="2"
                 Grid.RowSpan="2"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 VerticalContentAlignment="Center"
                 Padding="10 0 10 0"
                 Height="50"
                 Width="240"/>
        <TextBlock Grid.Column="1"
                   Grid.ColumnSpan="4"
                   Grid.Row="3"
                   Grid.RowSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="пароль"
                   FontSize="32"/>
        <PasswordBox x:Name="passwordTb"
                 Grid.Column="1"
                 Grid.ColumnSpan="4"
                 Grid.Row="4"
                 Grid.RowSpan="2"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 VerticalContentAlignment="Center"
                     Padding="10 0 10 0"
                 Height="50"
                 Width="240"/>
        <Button x:Name="loginBtn"
                Content="войти"
                FontSize="24"
                Click="loginBtn_Click" 
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Grid.Row="6"
                Grid.RowSpan="2"
                Height="50"
                Width="220"/>
    </Grid>
</Page>
